@model ProductMSystem.Models.ViewModel.AdminRegisterViewModel


<body>
    <div class="container" style="margin-top:150px; width:90%;">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card mt-4">
                    <div class="card-body text-white" style="box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
                        <h2 class="card-title text-primary text-center">Create New Admin</h2>
                        <form asp-controller="SuperAdmin" asp-action="CreateAdmin" method="post">
                            <div class="form-group">
                                <label for="Email">Email</label>
                                <input asp-for="Email" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Password">Password</label>
                                <input asp-for="Password" class="form-control" type="password" />
                            </div>
                            <div class="form-group">
                                <label for="ConfirmPassword">Confirm Password</label>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            </div>
                            <div class="text-center mt-4 d-flex justify-content-between">
                                <a type="button" class="btn btn-secondary ml-2" asp-controller="SuperAdmin" asp-action="SuperAdminDashboard" style="width: 150px;">Close</a>

                                <button type="submit" class="btn btn-primary" style="width: 150px;">Create Admin</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>






