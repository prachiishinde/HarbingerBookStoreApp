@model ProductMSystem.Models.ViewModel.CreateUserViewModel

<h2>Create User</h2>

<body>
    <div class="container" style="margin-top:150px; width:90%;">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card mt-5">
                    <div class="card-body text-white" style="box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
                        <h2 class="card-title text-primary text-center">Create New User</h2>
                        <form asp-controller="SuperAdmin" asp-action="CreateUser">
                            <div class="form-group">
                                <label asp-for="Email" class="control-label">Email</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label">Password</label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
                                <input asp-for="ConfirmPassword" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            
                            <div class="text-center mt-4 d-flex justify-content-between">
                                <a type="button" class="btn btn-secondary ml-2" asp-controller="SuperAdmin" asp-action="UserDashboard" style="width: 150px;">Close</a>

                                <button type="submit" class="btn btn-primary" style="width: 150px;">Create User</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

