
@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3" style="margin-top:100px">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Books List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Admin" asp-action="Add" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Book
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" aria-describedby="booklist" style="width:100%">
        <thead class="text-center">
            <tr>
                <th style="color:#f6f6f6">
                    Book Title
                </th>
                <th style="color:#f6f6f6">
                    Book Author
                </th>
                <th style="color:#f6f6f6">
                    Published Year
                </th>
                <th style="color:#f6f6f6">
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var obj in Model)
            {
                <tr>
                    <td style="width:30%" class="align-middle text-white">
                        @obj.Title
                    </td>
                    <td style="width:30%" class="align-middle text-white">
                        @obj.Author
                    </td>
                    <td style="width:20%" class="align-middle text-white">
                        @obj.Year
                    </td>
                    <td>
                        <div class="w-72 btn-group" role="group">

                            <a asp-controller="Admin" asp-action="View" asp-route-id="@obj.ID"
                               class="btn btn-info mx-2"> <i class="bi bi-eye-fill"></i>View</a>
                            <a asp-controller="Admin" asp-action="Edit" asp-route-id="@obj.ID"
                               class="btn btn-success mx-2"> <i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Admin" asp-action="Delete" asp-route-id="@obj.ID"
                               class="btn btn-warning mx-2"> <i class="bi bi-trash-fill"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
    <div style="margin-bottom: 60px;"></div>
</div>
